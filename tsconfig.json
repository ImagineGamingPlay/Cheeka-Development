{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "esnext",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "allowJs": true,
        "removeComments": true,
        "esModuleInterop": true,
        // Type-checking
        "strict": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "paths": {
            "@assets/": ["assets/*"]
        }
    },
    "include": ["src/**/*", "environment.d.ts"],
    "exclude": ["node_modules/", "dist/"]
}
